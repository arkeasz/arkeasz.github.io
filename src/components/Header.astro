<style>
	.mobile {
		display: none;
	}
    button {
        all: unset;
        height: 100%;
        width: 15%;
        cursor: pointer;

        svg {
            width: 100%;
            height: 100%;
        }
    }

    @media screen and (max-width: 990px) {
        .desktop {
            display: none;
        }

        .mobile {
            display: flex;
        }
    }


	nav {
		position: fixed;
		top: 0;
		height: 100%;
		border-left: .1rem solid #111;
		display: flex;
		flex-direction: column;
		width: 100%;
		background-color: #d8d0cd;
		padding: 3rem 0;

	}


	a {
		text-decoration: none;
		display: flex;
		align-items: center;
		color: #4a4949;
		border-top: .1rem solid #111;
		gap: .6rem;

		&:hover {
      		background-color: #e0d6b4;
			color: #353434;
		}
		
		svg {
			width: 1.2rem;
		}
	}

			
	.principal {
		justify-content: flex-start;
		padding: 1.2rem 1rem;
	}

	.secondary {
		padding: .5rem 2rem ;
	}
</style>