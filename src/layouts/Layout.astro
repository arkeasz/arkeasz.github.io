---
import Head from '../meta/Head.astro'
const { ...props } = Astro.props
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<Head />
	</head>
	<body>
		<Header />
			<slot />
		<Footer />
	</body>
</html>

<style>
html,
body {
	margin: 0;
	width: 100%;
	height: 100%;
}

body {
  background-color: rgb(15, 0, 28);
  color: #ddd;
  display: grid;
  position: relative;

  &::before {
    content: "";
    position: absolute;
    z-index: -1;
    background-color: rgba(15, 0, 28, 0.608);
    width: 100%;
    height: 150%;
    backdrop-filter: blur(40px);
  }

  &::after {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    content: "";
    width: 30rem;
    height: 30rem;
    position: absolute;
    background: radial-gradient(circle,
      rgba(145, 0, 161, 0.8) 0%,
      rgba(87, 0, 137, 0.4) 51%,
      rgba(52, 0, 84, 0.51) 98%
    );
    border-radius: 100%;
    z-index: -1000;

  }
}

</style>
